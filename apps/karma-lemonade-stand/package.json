{
  "name": "@karma-lemonade-stand/app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "npm run build",
    "build:client": "cd src/client && vite build",
    "build:server": "cd src/server && vite build",
    "build": "npm run build:client && npm run build:server",
    "check": "npm run type-check && npm run lint:fix && npm run prettier",
    "deploy": "npm run build && devvit upload",
    "dev": "concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER,DEVVIT\" -c \"blue,green,magenta\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:devvit\"",
    "dev:client": "cd src/client && vite build --watch",
    "dev:devvit": "devvit playtest r/lemonomics_game_dev",
    "dev:server": "cd src/server && vite build --watch",
    "dev:vite": "cd src/client && vite --port 7474",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "login": "devvit login",
    "launch": "npm run build && npm run deploy && devvit publish",
    "prettier": "prettier --write .",
    "type-check": "tsc --build",
    "upload": "devvit upload",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --run src/tests/unit",
    "test:integration": "vitest --run src/tests/integration",
    "test:e2e": "vitest --run src/tests/e2e",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@devvit/payments": "0.12.1",
    "@devvit/web": "0.12.1",
    "devvit": "0.12.1",
    "express": "5.1.0",
    "openai": "^6.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@types/express": "5.0.1",
    "@types/node": "^20.19.21",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.1.1",
    "concurrently": "9.1.2",
    "eslint": "9.23.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "globals": "15.15.0",
    "prettier": "3.5.3",
    "supertest": "^7.0.0",
    "typescript": "5.8.2",
    "typescript-eslint": "8.29.0",
    "vite": "6.2.4",
    "vitest": "3.1.1"
  }
}
